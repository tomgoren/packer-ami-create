{
    "variables" : {
        "aws_access_key" : "",
        "aws_secret_key" : "" 
    },
    "builders": [{
        "type": "amazon-ebs",
        "access_key": "{{user `aws_access_key`}}", 
        "secret_key": "{{user `aws_secret_key`}}", 
        "region": "us-east-1",
        "source_ami": "ami-fce3c696",
        "instance_type": "m3.medium",
        "ssh_username": "ubuntu",
        "ami_name": "packer_example {{timestamp}}"
    }],
    "provisioners": [{
        "type": "shell",
        "inline": [
            "sleep 30",
            "sudo apt-get update",
            "sudo apt-get install -y nginx"
        ]
    }]
}
